# Environment Variables Template
# Copy this file to .env and fill in your values

# Python
PYTHONPATH=./backend

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key  # For admin operations

# Database (Supabase PostgreSQL with pgvector)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres
POSTGRES_PASSWORD=your_postgres_password

# HuggingFace (for Pyannote models)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Models
WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
PYANNOTE_DIARIZATION_MODEL=pyannote/speaker-diarization@3.1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# n8n
N8N_HOST=localhost
N8N_PORT=5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# LiveKit (optional, for live ingestion)
LIVEKIT_API_KEY=your_livekit_key
LIVEKIT_API_SECRET=your_livekit_secret
LIVEKIT_WS_URL=ws://localhost:7880

# LLM for Explanations (Just for an example we'll probably use something else)
LLM_PROVIDER=ollama  # Options: ollama, openai, huggingface
LLM_MODEL=llama-3.1-8b
LLM_API_URL=http://localhost:11434
# OPENAI_API_KEY=your_openai_key  # If using OpenAI

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/app.log

# Data Paths
DATA_DIR=./data
AUDIO_DIR=./data/audio
RESULTS_DIR=./results

# Evaluation
EVAL_DATASET_DIR=./data/evaluation
EVAL_OUTPUT_DIR=./results/evaluations
